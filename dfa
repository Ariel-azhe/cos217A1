start_state (accept) <- the start state
    /: state_left_slash ()
    ": state_double_quote
    ': state_single_quote
    EOF: End of File
    other: start_state

state_left_slash (accept)
    *: state_reject
    /: state_left_slash
    ": state_double_quote
    ': state_single_quote
    other: start_state

state_reject (reject)
    *: state_aster
    \n: state_reject
    EOF: Error: line %d: unterminated comment\n
    other: state_reject

escape_dquoted(accept)
    ": state_double_quote
    ': state_double_quote
    \: state_double_quote
    other: state_double_quote

escape_squoted(accept)
    ": state_single_quote
    ': state_single_quote
    \: state_single_quote
    other: state_single_quote

state_aster (reject)
    /: start_state
    *: state_aster
    other: state_reject

state_double_quote (accept)
    ": start_state
    \: escape_dquoted
    EOF: break;
    other: state_double_quote (print char)

state_single_quote (accept)
    ': start_state
    \: escape_squoted
    EOF: break
    other: state_single_quote (print char)